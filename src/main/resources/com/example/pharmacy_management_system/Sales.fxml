<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.pharmacy_management_system.controllers.SalesController"
           prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" alignment="TOP_CENTER">
        <fx:include source="Header.fxml" />

        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20px;">
            <Label text="Purchase History" textFill="#0e141b">
                <font>
                    <Font name="Inter Bold" size="24"/>
                </font>
                <VBox.margin>
                    <Insets top="30" left="250"/>
                </VBox.margin>
            </Label>

            <TableView fx:id="purchaseHistoryTable" maxWidth="1300">
                <columns>
                    <TableColumn fx:id="drugSoldColumn" text="Drug Name" minWidth="200" />
                    <TableColumn fx:id="buyerColumn" text="Buyer" minWidth="200" />
                    <TableColumn fx:id="quantityColumn" text="Quantity" minWidth="100" />
                    <TableColumn fx:id="amountColumn" text="Amount" minWidth="100" />
                    <TableColumn fx:id="dateColumn" text="Date" minWidth="150" />
                    <TableColumn fx:id="timeColumn" text="Time" minWidth="150" />
                </columns>
            </TableView>
        </VBox>
    </VBox>
</StackPane>
